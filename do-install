#!/bin/bash
echo Installing: git git-lfs fish kitty netcat hub dmenu curl i3-wm i3blocks i3status i3lock xorg-xinit google-chrome net-tools xorg-xset xf86-drivers xorg-drivers tmux upower torque fzf
case $(uname -a) in
        *ebian*);&
        *buntu*) sudo apt install git git-lfs fish kitty netcat hub dmenu curl net-tools xorg-xse xf86-drivers xorg-drivers tmux upower torque fzf;
                 git lfs install;;
        *rch*) sudo pacman -S --noconfirm git;
                if [ ! -e /usr/bin/yay ]; then
                pushd ~/src;
                git clone https://aur.archlinux.org/yay.git;
                pushd yay;
                makepkg -si --noconfirm;
                popd;
                popd; fi
                yay -S --sudoloop --noconfirm --mflags --skipinteg fish kitty netcat hub dmenu curl windows10-icon-theme-git i3-wm i3blocks i3status i3lock xorg-xinit google-chrome net-tools tmux upower xorg-drivers lxterminal torque git-lfs fzf;
                git lfs install;;
esac
